<%= form_tag new_user_collection_path, :method => :get do %>
  <p>
		<dl>
			<dt>제목·저자와 같은 책 정보를 넣어주세요.</dt>
			</dd>
				<%= text_field_tag :q, params[:q] %>
			</dd>
		</dl>
  </p>
	<p>
		<%= submit_tag 'Search', :name => nil %>
	</p>
<% end %>

<%= simple_form_for(@collection, :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :book_id, :collection => @books, :as => :radio_buttons, :label => "책" %>
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => params[:user_id] } %>
		<%= f.input :village_id, :as => :hidden, :input_html => { :value => @user.village.id } %>
    
  </div>

  <div class="form-actions">
    <%= f.submit "확인", :class => "btn btn-primary" %>
    <%= link_to "취소", user_collections_path(params[:user_id]), :class => "btn" %> 
  </div>
<% end %>
