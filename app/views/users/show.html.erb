<% content_for :village do %>
<%= @user.village %>
<% end %>
<% end %>
<h2><%= @user.email %>님의 장서</h2>
<table>
	<% @collections.each do |collection| %>
	  <tr>
	    <td><%= link_to collection.book.title, collection_path(collection) %> - <%= collection.book.series %> | <%= collection.book.main_author%></td>
	    <td><%= collection.status %></td>
	    <td><%= collection.memo %></td>
	  </tr>
	<% end %>
</table>

