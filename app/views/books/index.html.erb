<h1>Listing books</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Title</th>
    <th>Foreign titlefirst category</th>
    <th>Second category</th>
    <th>Authors</th>
    <th>Main author</th>
    <th>Publisher</th>
    <th>Published at</th>
    <th>Language</th>
    <th>Size</th>
    <th>Last page</th>
    <th>Isbn10</th>
    <th>Isbn13</th>
    <th>Price</th>
    <th>Reviewed</th>
    <th>Description</th>
    <th>Index page</th>
    <th>Series</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.url %></td>
    <td><%= book.title %></td>
    <td><%= book.foreign_titlefirst_category %></td>
    <td><%= book.second_category %></td>
    <td><%= book.authors %></td>
    <td><%= book.main_author %></td>
    <td><%= book.publisher %></td>
    <td><%= book.published_at %></td>
    <td><%= book.language %></td>
    <td><%= book.size %></td>
    <td><%= book.last_page %></td>
    <td><%= book.isbn10 %></td>
    <td><%= book.isbn13 %></td>
    <td><%= book.price %></td>
    <td><%= book.reviewed %></td>
    <td><%= book.description %></td>
    <td><%= book.index_page %></td>
    <td><%= book.series %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

