<h1>Listing books</h1>




<table>
  <tr>
    <th>Title</th>
    <th>First category</th>
    <th>Second category</th>
    <th>Author</th>
    <th>Publisher</th>
    <th>Published at</th>
    <th>Language</th>
    <th>Size</th>
    <th>Last page</th>
    <th>Isbn10</th>
    <th>Isbn13</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.first_category %></td>
    <td><%= book.second_category %></td>
    <td><%= book.main_author %></td>
    <td><%= book.publisher %></td>
    <td><%= book.published_at %></td>
    <td><%= book.language %></td>
    <td><%= book.size %></td>
    <td><%= book.last_page %></td>
    <td><%= book.isbn10 %></td>
    <td><%= book.isbn13 %></td>
  </tr>
<% end %>
</table>

