<%= simple_form_for(@collection, :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :book_id, :collection => Book.limit(4), :as => :radio_buttons, :label => "책" %>
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => @user.id } %>
    
  </div>

  <div class="form-actions">
    <%= f.submit "확인", :class => "btn btn-primary" %>
    <%= link_to "취소", user_collections_path(@user.id), :class => "btn" %> 
  </div>
<% end %>

